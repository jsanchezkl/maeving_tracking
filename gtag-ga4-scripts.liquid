    if (button && event.isTrusted) {
      var direction = "";
      if (button.classList.contains("swiper-button-next")) {
        direction = "right";
      } else if (button.classList.contains("swiper-button-prev")) {
        direction = "left";
      }
      if (direction) {
        gtag('event', 'cfg_gallery_swipe', {
          direction: direction,
          product: productTitle
        });
      }
    }
  });
})();
</script>

